<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %5X{pid} [%t] %-5level (%F:%L) |%X{X-B3-TraceId}| - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
        <logger name="com.ec.crm.mapper" level="debug"/>
        <logger name="org.jasig.cas.client" level="debug"/>
    </Loggers>
</Configuration>